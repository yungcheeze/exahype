/**

 Euler Flow

 A simple project. (well, it was simple, in the beginning).

 */
exahype-project  Euler

  peano-kernel-path const          = ./Peano
  exahype-path const               = ./ExaHyPE
  output-directory const           = ./Applications/EulerFlow_2ADERDG
  architecture const               = noarch

  computational-domain
    dimension const                = 2
    width                    = 1.0, 1.0
    offset                   = 0.0, 0.0
    end-time                 = 0.4
  end computational-domain

/*
  shared-memory
    identifier               = dummy
    cores                    = 1
    properties-file          = sharedmemory.properties
  end shared-memory
*/
  
  solver ADER-DG FirstEulerSolver
    variables const         = 5
    order const             = 3
    maximum-mesh-size = 0.15
    time-stepping     = globalfixed
    kernel const            = generic::fluxes::nonlinear
    language const          = C

    plot vtk::Cartesian::vertices::ascii
      variables const = 5
      time      = 0.0
      repeat    = 0.05
      output    = ./conserved1
      select    = x:0.0,y:0.0
    end plot
  end solver
 
  solver ADER-DG SecondEulerSolver
    variables const         = 5
    order const             = 3
    maximum-mesh-size = 0.15
    time-stepping     = globalfixed
    kernel const            = generic::fluxes::nonlinear
    language const          = C

    plot vtk::Cartesian::vertices::ascii
      variables const = 5
      time      = 0.0
      repeat    = 0.05
      output    = ./conserved2
      select    = x:0.0,y:0.0
    end plot
  end solver
 
end exahype-project
